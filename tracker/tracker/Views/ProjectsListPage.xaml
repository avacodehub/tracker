<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="cpProjects"
             mc:Ignorable="d"
             x:Class="tracker.Views.ProjectsListPage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Other"
                 Order="Primary"
                 Priority="0"
                     Clicked="WatchOther"/>
        <ToolbarItem Text="New"
                 Order="Primary"
                 Priority="0"
                 Command="{Binding CreateProjectCommand}"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <ListView ItemsSource="{Binding Projects}"
                  HasUnevenRows="True">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Padding="15" Spacing="12">
                                    <Label Text="Project Name"/>
                                    <Label 
                                       HorizontalOptions="StartAndExpand"
                                       Text="{Binding Name}"
                                           FontSize="Title"/>
                                    <Label 
                                       HorizontalOptions="StartAndExpand"
                                       Text="Time Spent"/>
                                    <Label
                                       HorizontalOptions="StartAndExpand"
                                       Text="{Binding GetTime}"
                                       FontSize="40"
                                           TextColor="Black"/>
                                    <Button 
                                        
                                        Text="Start" 
                                        Command="{Binding StartCommand}"/>
                                    <Button Grid.Row="4"
                                        Text="Stop"
                                        Command="{Binding StopCommand}"/>
                                    <Button 
                                        Text="Manage"
                                        Command="{Binding Path=BindingContext.ManageProjectCommand, Source={x:Reference cpProjects}}"
                                        CommandParameter="{Binding}"/>
                                    <Button 
                                        Text="Edit Time"
                                        Command="{Binding Path=BindingContext.EditTimeCommand, Source={x:Reference cpProjects}}"
                                            CommandParameter="{Binding}"/>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </StackLayout>
        </ScrollView>

    </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tracker.Views.WatchPage"
             Title="Watch Projects">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="+"
                 Order="Primary"
                 Priority="0"
                     />
        
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="entCustomId" Text="" Placeholder="Enter Custom ID here..."/>
            <Label x:Name="entTime" Text="" FontSize="Large"/>

            <Button Text="Get Info" Clicked="FetchProject"/>
            <Button Text="Clear" Clicked="ClearClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
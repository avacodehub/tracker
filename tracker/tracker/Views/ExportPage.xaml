<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="tracker.Views.ExportPage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	Title="Export Project Info">
	<ContentPage.Content>
		<StackLayout Padding="8">
			<StackLayout>
				<Label Text="From:" />
				<DatePicker Date="{Binding FromDate}" />
				<Label Text="To:" />
				<DatePicker Date="{Binding ToDate}" />
			</StackLayout>

			<Button
				Margin="0,20,0,0"
				BackgroundColor="LightGreen"
				Clicked="btnExportClick"
				Text="Export" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
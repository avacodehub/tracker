<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="tracker.Views.AboutPage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	Title="About">
	<ContentPage.Content>
		<FlexLayout
			Padding="10"
			Direction="Column"
			JustifyContent="SpaceBetween">
			<StackLayout Spacing="10">
				<Label FontSize="Large" Text="Time Tracker" />
				<Label FontSize="Medium" Text="App for tracking and share multiple projects. Created by avacodehub and PI.Engineering" />
				<Label Text="avacodehub@gmail.com" />
				<Label Text="pi.engineering.ok@gmail.com" />
			</StackLayout>
			<Label HorizontalTextAlignment="Center" Text="{Binding CurrentYear}" />
		</FlexLayout>
	</ContentPage.Content>
</ContentPage>
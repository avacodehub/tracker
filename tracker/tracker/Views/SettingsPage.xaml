<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="tracker.Views.SettingsPage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	Title="Settings">

	<ContentPage.ToolbarItems>
		<ToolbarItem
			Clicked="btnAboutClicked"
			Order="Primary"
			Priority="0"
			Text="ABOUT" />
	</ContentPage.ToolbarItems>

	<ContentPage.Content>
		<StackLayout Padding="10">
			<Label
				Margin="0,10,0,10"
				FontSize="Medium"
				Text="This page is not ready yet. All Functions are coming soon." />
			<FlexLayout
				Padding="10"
				Direction="Row"
				JustifyContent="SpaceBetween">
				<Label Text="Enable multiple active projects" />
				<Switch />
			</FlexLayout>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>